---
import '../styles/global.css';

type Props = {
  lang: 'zh' | 'en';
  title: string;
  description: string;
  ogImageUrl: string;
  ogUrl: string;
};

const { lang, title, description, ogImageUrl, ogUrl } = Astro.props;
---

<!doctype html>
<html lang={lang === 'zh' ? 'zh-Hant' : 'en'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Sail Liao Portfolio" />
    <meta property="og:url" content={ogUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <title>{title}</title>

    <script is:inline>
      (() => {
        try {
          const STORAGE_KEY = 'theme';
          const stored = localStorage.getItem(STORAGE_KEY);
          const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
          const theme = stored || (prefersLight ? 'light' : 'dark');
          if (theme === 'light') document.documentElement.classList.add('light');
        } catch {}
      })();
    </script>
  </head>
  <body>
    <slot />
    <script is:inline>
      (() => {
        const themeButtons = document.querySelectorAll('[data-action="toggle-theme"]');
        const printButtons = document.querySelectorAll('[data-action="print"]');

        themeButtons.forEach((btn) => {
          btn.addEventListener('click', () => {
            const root = document.documentElement;
            const isLight = root.classList.toggle('light');
            try {
              localStorage.setItem('theme', isLight ? 'light' : 'dark');
            } catch {}
          });
        });

        printButtons.forEach((btn) => btn.addEventListener('click', () => window.print()));
      })();
    </script>
  </body>
</html>
