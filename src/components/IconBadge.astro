---
type Props = {
  size?: 'sm' | 'md';
};

const { size = 'md' } = Astro.props;
const sizeClass = size === 'sm' ? 'w-7 h-7' : 'w-8 h-8';
---

<div
  class={`${sizeClass} grid place-items-center rounded-lg`}
  style={{
    background: 'var(--icon-badge-bg)',
    border: '1px solid var(--icon-badge-border)',
    boxShadow: 'var(--icon-badge-shadow)',
  }}
  aria-hidden="true"
>
  <slot />
</div>
